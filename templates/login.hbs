  <body>
    <h1>Login Form</h1>

    <div class="error">
      {{#if error}}
        <p class="error">{{{error}}}</p>
      {{/if}}
    </div>

    <form action="/login" method="post">
      <input class="input" placeholder="Name" name="name" type="text" />
      <br />
      <input
        class="input"
        placeholder="Password"
        name="password"
        type="password"
      />
      <br />
      <input class="sub" type="submit" />
      <h3 class="danger">Dont have an account ?
        <a class="link" href="/signup">Create a new account</a></h3>

    </form>

    <a href="/forgot" class="danger">Forgot Password</a>

  </body>
</html>